---
interface Props {
  title: string;
  price: number;
  image: string;
  description: string;
}

const { title, price, image, description } = Astro.props;
---

<div class="bg-white rounded-lg shadow-lg overflow-hidden transition-transform hover:scale-105">
  <img src={image} alt={title} class="w-full h-48 object-cover"/>
  <div class="p-4">
    <h3 class="text-xl font-semibold text-soft-black mb-2">{title}</h3>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="flex justify-between items-center">
      <span class="text-2xl font-bold text-soft-black">${price}</span>
      <a href={`https://wa.me/+1234567890?text=Me interesa el producto ${title}`} 
         class="bg-pastel-blue text-soft-black px-4 py-2 rounded-lg hover:bg-blue-200 transition-colors">
        Consultar
      </a>
    </div>
  </div>
</div>